<table class="products">
  <tr>
    {{#each_on_current_page_top products.Product}}
      {{> product}}
    {{/each_on_current_page_top}}
  </tr>
  <tr>
    {{#each_on_current_page_bottom products.Product}}
      {{> product}}
    {{/each_on_current_page_bottom}}
  </tr>
</table>
<span class="pages">Pages:</span>
{{#each_page products.Product}}
  {{#if currentPage}}
    <a class="page-link current-page-link" title="Change to page {{pageNumber}}" href="#" onclick="ShoppingCartPlugin.changePage({{pageNumber}});return false;">{{pageNumber}}</a>
  {{else}}
    <a class="page-link" title="Change to page {{pageNumber}}" href="#" onclick="ShoppingCartPlugin.changePage({{pageNumber}});return false;">{{pageNumber}}</a>
  {{/if}}
{{/each_page}}

