<div class="shopping-cart-widget {{theme}}">
  <div class="shopping-cart-header">
    <span class="category-name {{theme}}">{{currentCategory.CatName}}</span>
    <span class='category-select {{theme}}'>
      <label for="shoppingcart-category-select">Browse:</label>
      <select name="shoppingcart-category-select" id="shoppingcart-category-select" class="shopping-cart-categories" onchange="ShoppingCartPlugin.changeCategory(this);return false;">
      {{#each categories}}
        <option value={{this.ProdCatID}} {{#if this.isCurrentCategory}}selected{{/if}}>{{this.CatName}}</option>
      {{/each}}
      </select>
    </span>
  </div>
  <div class="products">
    {{#each_on_current_page currentProducts}}
      {{> product}}
    {{/each_on_current_page}}
  </div>
  <div class="shopping-cart-footer">
    <span class="pages {{theme}}">Pages:</span>
    {{#each_page currentProducts}}
      {{#if currentPage}}
        <a class="page-link current-page-link {{theme}}" title="Change to page {{pageNumber}}" href="#" onclick="window.parent.ShoppingCartPlugin.changePage({{pageNumber}});return false;">{{pageNumber}}</a>
      {{else}}
        <a class="page-link" title="Change to page {{pageNumber}}" href="#" onclick="window.parent.ShoppingCartPlugin.changePage({{pageNumber}});return false;">{{pageNumber}}</a>
      {{/if}}
    {{/each_page}}
  </div>
</div>